@model Wiener.Models.DTO.AddPolicyViewModel

<div class="container">
    @if (Model?.Partner != null)
    {
        <h2>Add Policy for @Model.Partner.FullName</h2>

        <div>
            <p><strong>Partner Number:</strong> @Model.Partner.PartnerNumber</p>
            <p><strong>Created At:</strong> @Model.Partner.CreatedAtUtc</p>
            <p><strong>Gender:</strong> @Model.Partner.Gender</p>
        </div>

        <form asp-action="AddPolicy" method="post">
            <input type="hidden" asp-for="Policy.PartnerId" />

            <div class="form-group">
                <label asp-for="Policy.PolicyNumber"></label>
                <input asp-for="Policy.PolicyNumber" class="form-control" />
                <span asp-validation-for="Policy.PolicyNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Policy.PolicyAmount"></label>
                <input asp-for="Policy.PolicyAmount" class="form-control" />
                <span asp-validation-for="Policy.PolicyAmount" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Policy</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
        </form>
    }
    else
    {
        <p class="text-danger">Partner information is missing.</p>
    }
</div>
